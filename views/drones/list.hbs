<h2>Available drones</h2>

{{#each findAllDrones}}
    <h3>{{this.name}}</h3>
    <h4>propellers: {{ this.propellers }}</h4> 
    <h4>maxSpeed: {{this.maxSpeed}} </h4>
    <a href="/drones/ {{this._id}}/edit ">Edit</a>

    <form 
    
    action="/drones/{{this._id}}/delete" 
    method="post">

    <button type="submit">Delete</button>

    </form>

{{/each}}
